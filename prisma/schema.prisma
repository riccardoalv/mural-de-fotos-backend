generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  cpf       String   @unique
  password  String
  avatarUrl String?
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  resetPasswordCode       String?   @unique
  resetPasswordCodeExpiry DateTime?

  posts         Post[]
  comments      Comment[]
  likes         Like[]
  entity        Entity[]
  EntityCluster EntityCluster[]
}

model Post {
  id      String  @id @default(uuid())
  caption String?

  public Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  comments Comment[]
  likes    Like[]

  Media Media[]
}

model Media {
  id String @id @default(uuid())

  order Int @default(1)

  imageUrl String
  isVideo  Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  entities Entity[]

  isProcessed Boolean @default(false)

  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Entity {
  id String @id @default(uuid())

  entityPath String
  bbox       Json

  className  String
  confidence Float

  embedding Unsupported("vector")?

  name             String?
  isAboveThreshold Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  mediaId       String
  media         Media          @relation(fields: [mediaId], references: [id], onDelete: Cascade)
  EntityCluster EntityCluster? @relation(fields: [clusterId], references: [id])
  clusterId     String?
  User          User?          @relation(fields: [userId], references: [id])
  userId        String?

  @@index([mediaId])
  @@index([createdAt])
  @@index([className])
}

model EntityCluster {
  id String @id @default(uuid())

  name        String?
  description String?

  centroidEmbedding Unsupported("vector")?

  threshold Float

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  entities Entity[]

  @@index([userId])
  @@index([createdAt])
  @@index([threshold])
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
}

model Like {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  postId String
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId], name: "userId_postId")
}
